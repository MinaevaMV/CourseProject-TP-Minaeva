@model WebAppV2.Models.report

@{
    ViewBag.Title = "ReportCheck";
}

<h2>Подтвердить отчет</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Model.text</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Подтвердить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "IndexBySupUser", new {username = User.Identity.Name})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
