@model WebAppV2.Models.mother

@{
    ViewBag.Title = "RegisterStep2";
}

<h2>Регистрация. Шаг 2</h2>


@using (Html.BeginForm())
{
    //  @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>Чтобы получить доступ к функционалу сайта, введите свои пасспортные данные </p>

        <div class="form-group">
            @*@Html.LabelFor(model => model.mother_passport_data, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <b class="control-label col-md-2"> Пасспортные данные</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mother_passport_data, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mother_passport_data, "", new { @class = "text-danger" })
            </div>
        </div>





        
      

        <div class="form-group">

            <div class="col-md-10">
                <p style="font-weight:bolder">Ваш ребенок посещает наш детский сад?</p>
                <input type="radio" name="gender" value="male" checked /> Я папа
                <input type="radio" name="gender" value="female" /> Я мама
                <p></p>
                <p style="font-weight:bolder">Вы работник этого ДОУ?</p>
                <input type="radio" name="gender" value="methodist" /> Я методист ДОУ
                <input type="radio" name="gender" value="teacher" /> Я воспитатель ДОУ
                <input type="radio" name="gender" value="psychologist" /> Я психолог ДОУ
                <input type="radio" name="gender" value="superintendent" /> Я представитель администрации ДОУ

            </div>
        </div>



        @if (ViewData["error"] != null)
        {
            <p style="color:red">@ViewData["error"]</p>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Завершить регистрацию" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
